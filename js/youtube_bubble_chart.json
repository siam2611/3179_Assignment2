{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": "container",
    "height": 400,
    "background": "#f0f0f0",
    "data": {
        "url": "https://raw.githubusercontent.com/siam2611/3179_Assignment2/main/data/Global YouTube Statistics.csv"
    },
    "params": [
      {
        "name": "Continent_selection",
        "bind": {
          "input": "select",
          "options": [
            null,
            "North America",
            "South America",
            "Europe",
            "Africa",
            "Asia",
            "Oceania"
          ],
          "labels": [
            "Show All",
            "North America",
            "South America",
            "Europe",
            "Africa",
            "Asia",
            "Oceania"
          ],
          "name": "Continent Selection: "
        }
      }],
    "transform":[
        { "filter": "datum.Year_Highest_Earnings > 0" },
        { "filter": "datum.Pop2 > 0" },
        {
          "filter": "Continent_selection == null || datum.Continent == Continent_selection"
        }
      ],
      "encoding": {
        "x": {
          "field": "Pop2",
          "type": "quantitative",
          "title":"Population",
          "scale": {"type": "log"}
        },
        "y": {
          "field": "Year_Highest_Earnings",
          "type": "quantitative",
          "title": "Earnings",
          "scale": {"type": "log"}
        }
      },
      "config": {
        "view": {"stroke": "transparent"},
        "axis": {
          "grid": false
        }
      },
      "layer": [
        {
          "mark": {
            "type": "circle",
            "opacity": 0.8,
            "filled": true
          },
          "encoding": {
            "color": {
              "field": "Continent",
              "type": "nominal",
              "scale": {
                "domain": [
                  "North America",
                  "South America",
                  "Europe",
                  "Africa",
                  "Asia",
                  "Oceania"
                ],
                "range": [
                  "#e41a1c",
                  "#984ea3",
                  "#ff7f00",
                  "#a6cee3",
                  "#377eb8",
                  "#a65628"
                ]
              }
            },
            "tooltip": [
              {"field": "Countries", "type": "nominal"},
              {"field": "Year_Highest_Earnings", "type": "quantitative", "format": ","},
              {"field": "Pop2", "type": "quantitative", "format": ","}
            ]
          }
        }
      ]      
}