{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "YouTube Revenue vs. Country Population",
  "width": "container",
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/siam2611/3179_Assignment2/main/data/Global YouTube Statistics.csv",
    "format": {
      "type": "csv"
    }
  },
  "transform": [
    {
      "filter": {
        "field": "Countries",
        "oneOf": ["Australia", "United States of America", "Bangladesh", "India"]
      }
    }
  ],
  "mark": {
    "type": "circle",
    "tooltip": true
  },
  "encoding": {
    "x": {
      "field": "Pop2",
      "type": "quantitative",
      "scale": {"type": "log"},
      "axis": {"title": "Population (log scale)"}
    },
    "y": {
      "field": "Yearly_Highest_Earnings",
      "type": "quantitative",
      "scale": {"type": "log"},
      "axis": {"title": "Yearly Highest Earnings (log scale)"}
    },
    "size": {
      "field": "Pop2",
      "type": "quantitative",
      "aggregate": "sum",
      "scale": {"type": "sqrt"},
      "legend": {"title": "Total Population"}
    },
    "color": {
      "field": "Yearly_Highest_Earnings",
      "type": "quantitative",
      "scale": {"scheme": "viridis"},
      "legend": {"title": "Yearly Highest Earnings"}
    }
  }
}
