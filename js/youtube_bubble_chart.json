{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": "container",
    "height": 400,
    "background": "#f0f0f0",
    "data": {
        "url": "https://raw.githubusercontent.com/siam2611/3179_Assignment2/main/data/Global YouTube Statistics.csv"
    },
    "params": [
      {
        "name": "Continent_selection",
        "bind": {
          "input": "select",
          "options": [
            null,
            "North America",
            "South America",
            "Europe",
            "Africa",
            "Asia",
            "Oceania"
          ],
          "labels": [
            "Show All",
            "North America",
            "South America",
            "Europe",
            "Africa",
            "Asia",
            "Oceania"
          ],
          "name": "Continent Selection: "
        }
      }],
    "transform":[
        { "filter": "datum.Year_Highest_Earnings > 0" },
        { "filter": "datum.Pop2 > 0" },
        {
          "filter": "Continent_selection == null || datum.Continent == Continent_selection"
        }
      ],
      "encoding": {
        "x": {
          "field": "Pop2",
          "type": "quantitative",
          "title":"Population",
          "scale": {"type": "log"}
        },
        "y": {
          "field": "Year_Highest_Earnings",
          "type": "quantitative",
          "title": "Highest Yearly Earnings",
          "scale": {"type": "log"}
        }
      },
      "config": {
        "view": {"stroke": "transparent"},
        "axis": {
          "grid": false
        }
      },
      "layer": [
        {
          "mark": {
            "type": "circle",
            "opacity": 0.8,
            "filled": true
          },
          "encoding": {
            "color": {
              "field": "Continent",
              "type": "nominal",
              "scale": {
                "domain": ["Asia", "Africa", "North America", "Europe", "South America", "Oceania", "Antarctica"],
                "range": ["#1f77b4", "#ff7f0e", "#2ca02c", "#d62728", "#9467bd", "#8c564b", "#e377c2"]
              }
            },
            "tooltip": [
              {"field": "Countries", "type": "nominal"},
              {"field": "Year_Highest_Earnings", "type": "quantitative", "format": ","},
              {"field": "Pop2", "type": "quantitative", "format": ","}
            ]
          }
        },
        {
          "mark": {
            "type": "text",
            "align": "right",
            "baseline": "middle",
            "dx": -12,
            "fontSize": 11.5,
            "fontStyle": "italic"
          },
          "encoding": {
            "text": {"field": "Countries", "type": "nominal"},
            "color": {"value": "black"},
            "opacity": {
              "condition": {
                "test": "datum['Countries'] == 'India' || datum['Countries'] == 'United States of America' || datum['Countries'] == 'China' || datum['Countries'] == 'Peru' || datum['Countries'] == 'Venezuela' || datum['Countries'] == 'Bangladesh'",
                "value": 1
              },
              "value": 0
            }
          }
        }
      ]      
}